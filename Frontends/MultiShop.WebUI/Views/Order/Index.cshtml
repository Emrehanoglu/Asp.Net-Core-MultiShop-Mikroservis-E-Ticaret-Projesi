
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/_UILayout.cshtml";
}

<!-- Breadcrumb Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" href="#">Ana Sayfa</a>
                <a class="breadcrumb-item text-dark" href="#">Siparişler</a>
                <span class="breadcrumb-item active">Sipariş İşlemleri</span>
            </nav>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->

<!-- Checkout Start -->
<div class="container-fluid">
    <div class="row px-xl-5">

        @await Component.InvokeAsync("_OrderDetailComponentPartial");
        
        <div class="col-lg-4">
            <h5 class="section-title position-relative text-uppercase mb-3">
                <span class="bg-secondary pr-3">Sipariş Özeti</span></h5>

            @await Component.InvokeAsync("_OrderSummaryComponentPartial");
            
            @await Component.InvokeAsync("_PaymentMethodComponentPartial");

        </div>
    </div>
</div>
<!-- Checkout End -->